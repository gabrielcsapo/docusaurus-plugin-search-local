{
  "name": "docusaurus-plugin-search-local",
  "version": "0.6.0",
  "description": "An offline/local search plugin for Docusaurus v2.",
  "repository": "https://github.com/gabrielcsapo/docusaurus-plugin-search-local",
  "homepage": "https://github.com/gabrielcsapo/docusaurus-plugin-search-local",
  "scripts": {
    "check": "npm run check:client && npm run check:server",
    "check:client": "tsc --noEmit --project ./tsconfig.client.json",
    "check:server": "tsc --noEmit --project ./tsconfig.server.json",
    "commit": "commit",
    "lint": "eslint ./src --config .eslintrc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "start": "nf start --procfile ./procfiles/start.procfile",
    "start:client": "tsc --watch --project tsconfig.client.json",
    "start:server": "tsc --watch --project tsconfig.server.json",
    "parcel": "nf start --procfile ./procfiles/parcel.procfile",
    "prebuild": "rimraf dist",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc --project tsconfig.client.json",
    "build:css": "copyfiles -u 3 \"src/client/theme/**/*.css\" dist/client/theme",
    "build:server": "tsc --project tsconfig.server.json",
    "postbuild": "npm run build:css",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "main": "dist/server/index.js",
  "types": "src/docusaurus-plugin-search-local.d.ts",
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "workspaces": [
    "./website"
  ],
  "dependencies": {
    "@braintree/sanitize-url": "^6.0.0",
    "@docusaurus/core": "2.0.0-beta.22",
    "@docusaurus/module-type-aliases": "2.0.0-beta.22",
    "@docusaurus/types": "2.0.0-beta.22",
    "@docusaurus/utils": "2.0.0-beta.22",
    "@docusaurus/utils-validation": "2.0.0-beta.22",
    "cheerio": "^1.0.0-rc.11",
    "clsx": "^1.1.1",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "klaw-sync": "^6.0.0",
    "lunr": "^2.3.9",
    "mark.js": "^8.11.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt-cli": "^16.2.1",
    "@parcel/css": "^1.3.2",
    "@parcel/css-cli": "^1.3.2",
    "@release-it/conventional-changelog": "^4.1.0",
    "@swc/core": "^1.2.194",
    "@testing-library/react": "^12.1.2",
    "@tsconfig/docusaurus": "^1.0.5",
    "@types/cheerio": "^0.22.30",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/klaw-sync": "^6.0.0",
    "@types/lunr": "^2.3.3",
    "@types/mark.js": "^8.11.7",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.3.0",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "copyfiles": "^2.4.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fixturify": "^2.1.1",
    "foreman": "^3.0.1",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^20.0.0",
    "lint-staged": "^12.3.3",
    "msw": "^0.36.8",
    "parcel": "^2.3.1",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.6.2",
    "vitest": "^0.17.1"
  },
  "volta": {
    "node": "16.15.0"
  },
  "lint-staged": {
    "**/*.{ts,js}?(x)": "eslint --fix",
    "**/*.{ts,js,css,html,md,json}?(x)": "prettier --write"
  },
  "targets": {
    "server": {
      "context": "node",
      "distDir": "dist/server",
      "isLibrary": true,
      "optimize": false,
      "outputFormat": "commonjs",
      "engines": {
        "node": ">=16"
      }
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "releaseNotes": null,
      "autoGenerate": true
    },
    "hooks": {
      "after:bump": "npm run test -- -u"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "hidden": true
          },
          {
            "type": "docs",
            "section": "Documentation Updates"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": true
          },
          {
            "type": "perf",
            "section": "Performance Improvements"
          },
          {
            "type": "test",
            "hidden": true
          }
        ]
      }
    }
  }
}
