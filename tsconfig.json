{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmit": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": "src",
    "outDir": "lib",
    "types": ["node", "@docusaurus/module-type-aliases"]
  },
  "exclude": [
    "lib",
    "./scripts",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts"
  ]
}
